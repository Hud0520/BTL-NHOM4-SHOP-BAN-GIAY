<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Quản lý giày dép</title>
    <!-- fontawesome -->
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <!-- font text -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
    <!-- jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Assets/css/style.css">
    <script type="text/javascript" src="~/Areas/Admin/Assets/ckeditor/ckeditor.js"></script>
</head>
<body>
    <div class="container-fluid d-flex justify-content-between p-0">
        <div class="row d-flex justify-content-between" style="width: 100%;">
            <div class="menu col-2 p-0">
                <div class="account_detail border-bottom border-warning px-4 text-white" style="height: 180px;">
                    <i class="fas fa-user-circle mt-5" style="font-size: 50px;"></i>
                    <br>
                    <a href="#" class="text-white text-decoration-none mt-2 d-block" id="user">
                        @if (Session["Taikhoan"] != null)
                        {
                            @Session["Taikhoan"]
                        }
                    </a>
                    <br>
                    <a class="text-decoration-none text-danger" href="@Url.Action("DangNhap", "KhachHangs")">Đăng xuất</a>
                    <div class="btn btn-light" id="hide_user" style="width: 200px;"><a href="#" class="text-dark text-decoration-none">Thoát</a></div>
                </div>
                <ul class="manage list-unstyled">
                    <li class="parent-dropdown text-white p-3">
                        <span class="d-flex justify-content-between" style="width: 100%;">
                            <span><i class="fas fa-tachometer-alt"></i> &nbsp; Quản lý tài khoản</span>
                            <i id="xx" class="fas fa-sort-down"></i>
                        </span>
                        <ul class="child-dropdown list-unstyled mt-2" style="width: 100%;">
                            <li class="py-3" style="margin-left: 10px;"><a href="@Url.Action("Index","KhachHangs")" class="text-decoration-none text-white">Quản lý người dùng</a></li>
                        </ul>
                    </li>
                    <li class="parent-dropdown text-white p-3">
                        <span class="d-flex justify-content-between">
                            <span><i class="fas fa-chart-pie"></i> &nbsp; Quản lý Sản phẩm</span>
                            <i class="fas fa-sort-down"></i>
                        </span>
                        <ul class="child-dropdown list-unstyled mt-2" style="width: 100%;">
                            <li class="py-3" style="margin-left: 10px;"><a href="@Url.Action("Index","Giays")" class="text-decoration-none text-white">Sản phẩm</a></li>
                            <li class="py-3" style="margin-left: 10px;"><a href="@Url.Action("Index","DonHangs")" class="text-decoration-none text-white">Đơn hàng</a></li>
                            <li class="py-3" style="margin-left: 10px;"><a href="@Url.Action("Index","ChiTietDonHangs")" class="text-decoration-none text-white">Chi tiết đơn hàng</a></li>
                        </ul>
                    </li>
                    <li class="parent-dropdown text-white p-3">
                        <span class="d-flex justify-content-between">
                            <span><i class="fab fa-fort-awesome"></i> &nbsp; Thống kê số liệu</span>
                            <i class="fas fa-sort-down"></i>
                        </span>
                        <ul class="child-dropdown list-unstyled mt-2" style="width: 100%;">
                            <li class="py-3" style="margin-left: 10px;"><a href="@Url.Action("Index","TheLoais")" class="text-decoration-none text-white">Thống kê danh mục sản phẩm</a></li>
                            <li class="py-3" style="margin-left: 10px;"><a href="@Url.Action("Index","TinTucs")" class="text-decoration-none text-white">Quản lý tin tức</a></li>
                            <li class="py-3" style="margin-left: 10px;"><a href="@Url.Action("Index","Slides")" class="text-decoration-none text-white">Quản lý ảnh bìa</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="content col-10">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="~/Areas/Admin/Assets/js/script.js"></script>
</html>