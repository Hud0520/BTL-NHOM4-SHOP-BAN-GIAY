@model BTL_ASP.Models.DonHang

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal m-5">
        <h4>Chỉnh sửa đơn hàng</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDonHang)

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.MaKhachHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaKhachHang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaKhachHang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.GhiChu, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="GhiChu">@Html.DisplayFor(model => model.GhiChu)</textarea>
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-select" name="TrangThai" aria-label="Default select example" style="width: 300px;">
                    @if (ViewBag.trangthai.Equals("0"))
                    {
                        <option value="0" selected>Đơn hàng đang chờ xử lý</option>
                    }
                    else
                    {
                        <option value="0">Đơn hàng đang chờ xử lý</option>
                    }

                    @if (ViewBag.trangthai.Equals("1"))
                    {
                        <option value="1" selected>Đang chuẩn bị hàng</option>
                    }
                    else
                    {
                        <option value="1">Đang chuẩn bị hàng</option>
                    }

                    @if (ViewBag.trangthai.Equals("2"))
                    {
                        <option value="2" selected>Đang giao hàng</option>
                    }
                    else
                    {
                        <option value="2">Đang giao hàng</option>
                    }

                    @if (ViewBag.trangthai.Equals("3"))
                    {
                        <option value="3" selected>Đã nhận hàng</option>
                    }
                    else
                    {
                        <option value="3">Đã nhận hàng</option>
                    }

                    @if (ViewBag.trangthai.Equals("4"))
                    {
                        <option value="4" selected>Đơn hàng bị hủy</option>
                    }
                    else
                    {
                        <option value="4">Đơn hàng bị hủy</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.NgayTao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="p-2 rounded" type="datetime" name="NgayTao" value="@Html.DisplayFor(model => model.NgayTao)" />
                @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <div class="d-flex justify-content-between">
                <div>
                    <input type="submit" value="Lưu" class="btn btn-success" />
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "text-decoration-none" })
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">CKEDITOR.replace('GhiChu');</script>