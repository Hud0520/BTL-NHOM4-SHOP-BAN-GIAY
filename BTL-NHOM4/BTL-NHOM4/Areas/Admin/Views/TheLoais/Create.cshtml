@model BTL_ASP.Models.TheLoai

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal m-5">
        <h4>Thêm mới danh mục</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <textarea name="MoTa"></textarea>
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.NgayTao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="d-flex justify-content-between mt-2 col-md-10">
                <input class="p-2 rounded" type="datetime" name="NgayTao" value="@DateTime.Now" />
                @Html.ValidationMessageFor(model => model.NgayTao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.NgaySua, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="p-2 rounded" type="datetime" name="NgaySua" value="@DateTime.Now" />
                @Html.ValidationMessageFor(model => model.NgaySua, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between mt-2 form-group">
            @Html.LabelFor(model => model.TenTheLoai, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTheLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTheLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mt-2 form-group">
            <div class="d-flex justify-content-between">
                <div>
                    <input type="submit" value="Tạo" class="btn btn-success" />
                </div>
                <div>
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "text-decoration-none" })
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript">CKEDITOR.replace('MoTa');</script>