@model BTL_ASP.Models.TheLoai

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-5 p-5 border border-dark rounded">
    <h2>Xóa danh mục</h2>

    <h3 class="text-danger">Bạn có chắc chắn muốn xóa danh mục này không?</h3>
    <hr />
    <table class="table table-hover">
        <tr>
            <th>@Html.DisplayNameFor(model => model.MoTa)</th>
            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
            <th>@Html.DisplayNameFor(model => model.NgayTao)</th>
            <th>@Html.DisplayNameFor(model => model.TenTheLoai)</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.MoTa)</td>
            <td>@Html.DisplayFor(model => model.NgayTao)</td>
            <td>@Html.DisplayFor(model => model.NgayTao)</td>
            <td>@Html.DisplayFor(model => model.TenTheLoai)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color d-flex justify-content-between">
            <div>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "text-decoration-none" })
            </div>
        </div>
    }
</div>
