@model IEnumerable<BTL_ASP.Models.TheLoai>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid m-2">
    <h2>Thống kê thể loại</h2>
    <div class="d-flex justify-content-start my-4">
        <span class="btn btn-success" style="margin-right: 40px;">
            @Html.ActionLink("Tạo mới thể loại", "Create", null, new { @class = "text-white text-decoration-none" })
        </span>
    </div>
    <table class="table border-0 table-bordered">
        <tr>
            <th>
                Mô tả
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Ngày sửa
            </th>
            <th>
                Tên danh mục
            </th>
            <th width="140"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTheLoai)
                </td>
                <td>
                    @Html.ActionLink("Xem", "Details", new { id = item.MaDanhMuc }, new { @class = "text-decoration-none text-primary" }) |
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaDanhMuc }, new { @class = "text-decoration-none text-warning" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaDanhMuc }, new { @class = "text-decoration-none text-danger" })
                </td>
            </tr>
        }

    </table>
</div>