@model BTL_ASP.Models.Slide

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <h4>Chi tiết slide</h4>
    <hr />
    <table class="table table-hover">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Anh)</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.Id)</td>
            <td>
                @{
                    //Lấy đường dẫn file ảnh
                    string ImagePath = "~/wwwroot/img/_slide/" + Model.Anh;
                }
                <img src="@Url.Content(ImagePath)" class="img-thumbnail" />
            </td>
        </tr>
    </table>
    <p class="d-flex justify-content-between">
        @Html.ActionLink("Sửa", "Edit", new { id = Model.Id }, new { @class = "btn btn-info text-white" })
        @Html.ActionLink("Back to List", "Index", null, new { @class = "text-decoration-none" })
    </p>
</div>