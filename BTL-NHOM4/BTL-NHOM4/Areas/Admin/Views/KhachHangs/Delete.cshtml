@model BTL_ASP.Models.KhachHang

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="m-5 p-5 border border-dark rounded">
    <h2>Xóa người dùng</h2>

    <h3 class="text-danger">Bạn có chắc chắn muốn xóa người dùng này không?</h3>
    <hr />
    <table class="table table-hover">
        <tr>
            <th>Họ tên</th>
            <th>@Html.DisplayNameFor(model => model.Tuoi)</th>
            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.QuanTriVien)</th>
            <th>@Html.DisplayNameFor(model => model.MaKhachHang)</th>
            <th>@Html.DisplayNameFor(model => model.SDT)</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(model => model.Ho) @Html.DisplayFor(model => model.Ten)</td>
            <td>@Html.DisplayFor(model => model.Tuoi)</td>
            <td>@Html.DisplayFor(model => model.DiaChi)</td>
            <td>@Html.DisplayFor(model => model.Email)</td>
            <td>@Html.DisplayFor(model => model.QuanTriVien)</td>
            <td>@Html.DisplayFor(model => model.MaKhachHang)</td>
            <td>@Html.DisplayFor(model => model.SDT)</td>
        </tr>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color d-flex justify-content-between">
            <div>
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index", null, new { @class = "text-decoration-none" })
            </div>
        </div>
    }
</div>
