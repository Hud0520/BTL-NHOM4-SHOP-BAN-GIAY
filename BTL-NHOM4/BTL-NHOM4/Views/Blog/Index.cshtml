@using PagedList.Mvc;
@model PagedList.IPagedList<BTL_NHOM4.Models.TinTuc>
@{
    ViewBag.Title = "Tin tức";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="ht__bradcaump__area" style="background: rgba(0, 0, 0, 0) url(/wwwroot/img/bg/2.jpg) no-repeat scroll center center / cover ;">
    <div class="ht__bradcaump__wrap">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="bradcaump__inner text-center">
                        <h2 class="bradcaump-title">Tin tức</h2>
                        <nav class="bradcaump-inner">
                            <a class="breadcrumb-item" href="index.html">Trang chủ</a>
                            <span class="brd-separetor">/</span>
                            <span class="breadcrumb-item active">Tin tức</span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="htc__blog__area bg__white ptb--50">
    <div class="container">
        <div class="row">
            <div class="blog__wrap blog--page clearfix">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-lg-4 col-sm-6 col-xs-12">
                        <div class="blog foo">
                            <div class="blog__inner">
                                <div class="blog__thumb">
                                    <a href="blog-details.html">
                                        <img src="~/wwwroot/img/_blog/@item.AnhTieuDe" alt="blog images">
                                    </a>
                                    <div class="blog__post__time">
                                        <div class="post__time--inner">
                                            @{
                                                DateTime nt = item.NgayTao ?? DateTime.Now;
                                            }
                                            <span class="date">@nt.Day</span>
                                            <span class="month">@nt.Month</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="blog__hover__info bg-info">
                                    <div class="blog__hover__action">
                                        <p class="blog__des"><a href="@Url.Action("Detail","Blog",new {id = item.MaTinTuc })">@item.TieuDe</a></p>
                                        <div class="blog__btn">
                                            <a class="read__more__btn" href="blog-details.html">Xem ngay</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row mt--50">
            <div class="col-md-12">
                Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                <div class="text-center">
                    @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page }))
                </div>
            </div>
        </div>
    </div>
</div>


