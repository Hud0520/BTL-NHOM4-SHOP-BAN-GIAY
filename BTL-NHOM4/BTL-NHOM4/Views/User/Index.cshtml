@using PagedList.Mvc;
@model PagedList.IPagedList<BTL_NHOM4.Models.DonHangDao>
@{
    ViewBag.Title = "Cá nhân";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-3 p--0">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center active">
                    Đơn hàng
                    <span class="badge badge-primary badge-pill">@ViewBag.Count</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Thông tin cá nhân
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Đổi mật khẩu
                </li>
            </ul>
        </div>
        <div class="col-md-9">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Mã đơn hàng</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Tổng tiền</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        if (item.TrangThai == "4")
                        {
                            <tr class="bg-success">
                                <td>HD @item.MaDonHang</td>
                                <td>@item.TrangThai</td>
                                <td>@item.TongTien</td>
                                <td><a class="btn btn-primary" href="@Url.Action()">Xem chi tiết</a></td>
                            </tr>

                        }
                        else if (item.TrangThai == "3")
                        {
                            <tr class="bg-warning">
                                <td>HD @item.MaDonHang</td>
                                <td>@item.TrangThai</td>
                                <td>@item.TongTien</td>
                                <td><a class="btn btn-primary" href="@Url.Action()">Xem chi tiết</a></td>
                            </tr>

                        }
                        else
                        {
                            <tr class="bg-primary">
                                <td>HD @item.MaDonHang</td>
                                <td>@item.TrangThai</td>
                                <td>@item.TongTien</td>
                                <td><a class="btn btn-primary" href="@Url.Action()">Xem chi tiết</a></td>
                            </tr>

                        }

                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

