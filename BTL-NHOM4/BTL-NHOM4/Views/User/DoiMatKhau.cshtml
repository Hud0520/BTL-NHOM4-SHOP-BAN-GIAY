
@{
    ViewBag.Title = "Đổi mật khẩu";
}

<div class="bg__white">
    <div class="container">
        <div class="row">
            @Html.Partial("menu")
            <div class="col-md-9">
                <form action="@Url.Action("DoiMatKhau","User")" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-8 col-md-offset-2">
                            <label for="inputEmail4">Mật khẩu hiện tại</label>
                            <input type="password" class="form-control" id="inputEmail4" name="MatKhauCu" placeholder="Mật khẩu cũ" value="@ViewBag.mkcu">
                            <span class="text-danger">@ViewData["Loi1"]</span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8 col-md-offset-2">
                            <label for="inputPassword4">Mật khẩu mới</label>
                            <input type="password" class="form-control" id="inputPassword4" name="MatKhauMoi" placeholder="Mật khẩu mới" value="@ViewBag.mkmoi">
                            <span class="text-warning">@ViewData["Loi2"]</span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-8 col-md-offset-2">
                            <label for="inputEmail14">Nhập lại mật khẩu</label>
                            <input type="password" class="form-control" id="inputEmail14" name="CFMatKhau" placeholder="Nhập lại mật khẩu">
                        </div>
                    </div>
                    


                    <div class="form-group col-md-8 col-md-offset-2">

                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                    </div>


                </form>
            </div>
        </div>
    </div>
</div>



