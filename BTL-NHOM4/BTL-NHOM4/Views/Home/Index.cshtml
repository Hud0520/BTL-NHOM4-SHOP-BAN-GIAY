
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<section class="categories-slider-area bg__white">
    <div class="container">
        <div class="row">
            <!-- Start Left Feature -->
                <!-- Start Slider Area -->
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        @foreach (var item in ViewBag.Slide)
                        {
                            if (ViewBag.Slide.IndexOf(item) == 0)
                            {
                                <div class="item active">
                                    <img src="~/wwwroot/img/_slide/@item.Anh"style="width:100%;">
                                </div>
                            }
                            else
                            {
                                <div class="item">
                                    <img src="~/wwwroot/img/_slide/@item.Anh" style="width:100%;">
                                </div>
                            }
                        }
                    </div>

                    <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <!-- Start Slider Area -->
            </div>
            
            <!-- End Left Feature -->

        </div>
</section>
<!-- End Feature Product -->
<section class="htc__blog__area bg__white  ptb--100">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section__title section__title--2 text-center">
                    <h2 class="title__line">Sản phẩm mới</h2>
                    <p>Sản phẩm mới cập nhật. </p>
                </div>
            </div>
        </div>
        <div class="row mb-20">
            @foreach (var item in ViewBag.SanPham)
            {
                <div class="col-md-3 single__pro col-lg-3 col-sm-4 col-xs-12 cat--3">
                    <div class="product foo">
                        <div class="product__inner">
                            <div class="pro__thumb">
                                 <img src="~/wwwroot/img/_product/@item.Anh" alt="product images">
                            </div>
                            <div class="product__hover__info">
                                <ul class="product__action">
                                    <li><a title="Thêm vào giỏ hàng" href="@Url.Action("ThemGioHang", "Cart", new { iMaGiay = item.MaGiay, url =HttpContext.Current.Request.Url.PathAndQuery})"><span class="ti-shopping-cart"></span></a></li>
                                    <li><a title="Tim" ><span class="ti-heart"></span></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="product__details">
                            <h2><a href="@Url.Action("ProductDetail","Shop",new { id = item.MaGiay })">@item.TenGiay</a></h2>
                            <ul class="product__price">
                                @{ string giafm = (item.Gia ?? 0).ToString("#,##0"); }
                                <li class="">@giafm</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

            <!-- End Single Product -->
            <!-- Start Single Product -->
        </div>
        <div class="row mt--20">
            <div class="col-md-12">
                <div class="htc__loadmore__btn">
                    <a href="@Url.Action("Index","Shop")">Xem thêm</a>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="htc__blog__area bg__white  pb--130">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section__title section__title--2 text-center">
                    <h2 class="title__line">Tin tức mới</h2>
                    <p>Sản phẩm mới cập nhật và đang được giảm giá mạnh. </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="blog__wrap clearfix mt--60 xmt-30">
                <!-- Start Single Blog -->
                @foreach (var item in ViewBag.TinTuc)
                {
                    <div class="col-md-4 col-lg-4 col-sm-6 col-xs-12">
                        <div class="blog foo">
                            <div class="blog__inner">
                                <div class="blog__thumb">
                                    <a href="blog-details.html">
                                        <img src="~/wwwroot/img/_blog/@item.AnhTieuDe" alt="blog images">
                                    </a>
                                    <div class="blog__post__time">
                                        <div class="post__time--inner">
                                            <span class="date">@item.NgayTao.Day</span>
                                            <span class="month">@item.NgayTao.Month</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="blog__hover__info bg-info">
                                    <div class="blog__hover__action">
                                        <p class="blog__des"><a href="@Url.Action("Detail","Blog",new {id = item.MaTinTuc })">@item.TieuDe</a></p>
                                        <div class="blog__btn">
                                            <a class="read__more__btn" href="blog-details.html">Xem ngay</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- End Single Blog -->

            </div>
            <div class="row mt--20">
                <div class="col-md-12">
                    <div class="htc__loadmore__btn">
                        <a href="@Url.Action("Index","Blog")">Xem thêm</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>